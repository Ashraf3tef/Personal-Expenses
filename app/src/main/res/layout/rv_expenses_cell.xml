<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintBk"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/expensesImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_electricity_bill"
        android:scaleType="centerCrop"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/placeShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/expensesImage"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Place Shop"
        android:textSize="24sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/dateShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/expensesImage"
        app:layout_constraintTop_toBottomOf="@id/placeShop"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="4 3 2021"
        android:textSize="18sp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/salaryShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="50$"
        android:textSize="18sp"
        android:drawablePadding="8dp"
        android:paddingStart="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/expensesImage"
        app:layout_constraintTop_toBottomOf="@id/dateShop"
        />


    <ImageView
        android:id="@+id/removeBtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_baseline_delete_forever_24" />


    <ImageView
        android:id="@+id/checkBtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/removeBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_baseline_check_box_24" />

</androidx.constraintlayout.widget.ConstraintLayout>